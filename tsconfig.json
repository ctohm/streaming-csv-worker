{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020",
      "WebWorker"
    ],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
     "esModuleInterop": true,
    "declarationMap": true,
    "types": [
      "@cloudflare/workers-types","chrome"
    ],
    "rootDirs": ["./src","./test"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "./src/*.d.ts",
    "./src/*.ts",
    "./test/*.d.ts",
    "./test/*.ts",
    "./lib/*.d.ts",
    "./lib/*.ts",
    "./functions/*.ts",
    "./functions/**/*.ts",
    "./node_modules/@cloudflare/workers-types/index.d.ts"
   ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}