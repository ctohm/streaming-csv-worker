{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
     "esModuleInterop": true,
    "declarationMap": true,
    "types": [
      "@cloudflare/workers-types"
    ],
    "rootDirs": ["packages"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "packages/*.d.ts",
    "packages/*.ts",
    "./test/*.d.ts",
    "./test/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.ts",
 
    "./node_modules/@cloudflare/workers-types/index.d.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}